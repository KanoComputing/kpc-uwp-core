<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd">
  <metadata>
    <id>KanoComputing.KpcUwpCore</id>
    <version>1.3.0</version>
    <title>Kano PC Core UWP Libraries</title>
    <authors>Kano Computing</authors>
    <owners>Kano Computing</owners>
    <description>Collection of libraries that support Kano PC applications.</description>
    <projectUrl>https://github.com/KanoComputing/kpc-uwp-core</projectUrl>
    <license type="expression">MIT</license>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <copyright>Copyright (c) 2020 Kano Computing Ltd.</copyright>
    <tags>Kano KanoPC UWP library</tags>
    <icon>images\icon.png</icon>
    <dependencies>
      <group targetFramework="UAP10.0.17763">
        <dependency id="Microsoft.NETCore.UniversalWindowsPlatform" version="6.2.9" exclude="Build,Analyzers" />
      </group>
    </dependencies>
  </metadata>
  <files>
    <file
      src="bin\$configuration$\**"
      exclude="bin\$configuration$\Package;bin\$configuration$\*.xr.xml"
      target="lib\uap10.0.17763"/>
    <file
      src="bin\$configuration$\*.xr.xml"
      target="lib\uap10.0.17763\KpcUwpCore\"/>
    <file src="Assets\Images\icon.png" target="images\"/>
    <file src="..\LICENS*" target="licenses\"/>
  </files>
</package>
